{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Products</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ entity.quantity }}</td>
            </tr>
            <tr>
                <th>Pricetn</th>
                <td>{{ entity.priceTn }}</td>
            </tr>
            <tr>
                <th>Priceeur</th>
                <td>{{ entity.priceEur }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_products') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_products_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
