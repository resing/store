{# empty Twig template #}
{% extends "SiteFrontOfficeBundle::layout.html.twig" %}
{% block body %}
<div class="container">
	<div class="check">	 
			 <div class="col-md-3 cart-total">
			 <a class="continue" href="#">Etape 2 </a>
			 <div class="price-details">
				 <h3>Price Details</h3>
				 <span>Total</span>
				 <span class="total1">{{ somme }}</span>
				 <span>Discount</span>
                                 <span class="total1">---</span>
                                 {% for product in products %}
				 
                                 <span> {{ product.productdescription.name }}</span>
				 <span class="total1">{{ product.priceTn }}</span>
                                 {% endfor %}
				 <span>Delivery Charges</span>
				 <span class="total1">150.00</span>
				 <div class="clearfix"></div>				 
			 </div>	
			 <ul class="total_price">
			   <li class="last_price"> <h4>TOTAL</h4></li>	
			   <li class="last_price"><span>{% if somme == true %} {{somme + 150.00}} {% else %} --- {% endif %}</span></li>
			   <div class="clearfix"> </div>
			 </ul>
			 <div class="clearfix"></div>
			</div>
		 <div class="col-md-9 cart-items">
                 <div class="contact-form">
			 <h1>Adresse de livraison</h1>
                         <form method="post" action ="{{ path('site_confirme') }}" {{form_enctype(form) }}>
                 {{ form_row(form._token) }} 
                <div>
                    {{ form_errors(form.deliveryName) }}
                    <span><label>Name</label></span>
                    <span>{{ form_widget(form.deliveryName,{'attr': {'class': 'textbox' }}) }}</span>
                </div>
                <div>
                    {{ form_errors(form.deliveryStreetAddress) }}
                    <span><label>Adresse</label></span>
                    <span>{{ form_widget(form.deliveryStreetAddress,{'attr': {'class': 'textbox' }}) }}</span>
                </div>
                <div>
                    {{ form_errors(form.deliveryPostcode) }}
                    <span><label>Postcode</label></span>
                    <span>{{ form_widget(form.deliveryPostcode,{'attr': {'class': 'textbox' }}) }}</span>
                </div>
                <div>
                    {{ form_errors(form.deliveryState) }}
                    <span><label>deliveryState</label></span>
                    <span>{{ form_widget(form.deliveryState,{'attr': {'class': 'textbox' }}) }}</span>
                </div>
                <div>
                    {{ form_errors(form.deliveryCountry) }}
                    <span><label>Country</label></span>
                    <span>{{ form_widget(form.deliveryCountry,{'attr': {'class': 'textbox' }}) }}</span>
                </div>
                <div>
                    {{ form_errors(form.deliveryMobile) }}
                    <span><label>Mobile</label></span>
                    <span>{{ form_widget(form.deliveryMobile,{'attr': {'class': 'textbox' }}) }}</span>
                </div>
               <div>
               <span><input class="" value="Submit us" type="submit"></span>
              </div>
        </form>
                         </div>
</div>
<div class="clearfix"> </div>
</div>
    </div>
{% endblock %}

